<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SkiGes</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body  style="background: url('../Content/images/skiges4.gif');
        background-position: top center;
        background-size: 1200px;
        background-repeat: no-repeat;
        background-origin: content-box;
">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @if (Session["UserType"] != null)
                {
                    @Html.ActionLink("SkiGes", "UserDashBoard", "Account", new { area = "" }, new { @class = "navbar-brand" })                   
                }
                else
                {
                     @Html.ActionLink("SkiGes", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                }
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">


                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    @if (Session["UserType"] != null)
                    {
                        <li>@Html.ActionLink("Log out", "Logout", "Account")</li>
                    }

                    @if (Session["UserType"] == null)
                    {
                        <li>@Html.ActionLink("Register", "Register", "Account")</li>
                        <li>@Html.ActionLink("Log in", "Login", "Account")</li>
                    }
                    else if (Session["UserType"].Equals("administrator") || Session["UserType"].Equals("ADMIN"))
                    {
                        <li>@Html.ActionLink("Users", "Index", "Utilizators")</li>
                        <li>@Html.ActionLink("Adresses", "Index", "Adresas")</li>
                        <li>@Html.ActionLink("Motels", "Index", "Pensiunes")</li>
                        <li>@Html.ActionLink("Parties", "Index", "Parties")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - We make your best experiences!</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
