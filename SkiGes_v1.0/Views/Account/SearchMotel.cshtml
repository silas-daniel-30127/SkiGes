@model IEnumerable<SkiGes_v1._0.Models.ViewModel>
@{
    ViewBag.Title = "SearchMotel";
    if (Session["UserType"] == null)
    {
        Response.Redirect("~/Account/Login");
    }
}
<h1>Lista pensiunilor din apropierea partiei</h1>

<table class="table table-hover table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.pensiuni.Partie.nume)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nume)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.telefon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.camere)
        </th>
        <th>
            Rezervare
        </th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Partie.nume)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.nume)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.telefon)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.camere)
    </td>
    <td>
        @Html.EditorFor(model=>item.numarCamere)
        <input type="button" @Html.ActionLink("Rezerva", "~/Rezervares/Create", new {idp = item.idPartie, id = item.idPensiune,nrCamere=item.numarCamere}, new { @class = "btn btn-success btn-large" })>
    </td>

</tr>
    }
</table>